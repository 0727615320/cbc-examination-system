<%- include('../partials/header') %>

<div class="container mt-4">
  <!-- âœ… Flash Messages -->
  <% if (messages.success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= messages.success[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <% if (messages.error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= messages.error[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>

  <h2>Manage Teachers</h2>

  <a href="/teachers/new" class="btn btn-success mb-3">Add Teacher</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Username (Email)</th>
        <th>Role</th>
        <th>Assigned Class</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% teachers.forEach((teacher) => { %>
        <tr>
          <td><%= teacher.username %></td>
          <td><%= teacher.role || '-' %></td>
          <td><%= teacher.assigned_class || '-' %></td>
          <td>
            <a href="/teachers/edit/<%= teacher.id %>" class="btn btn-sm btn-primary">Edit</a>
            <a href="/teachers/delete/<%= teacher.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this teacher?');">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
