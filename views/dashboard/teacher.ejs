<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Teacher Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .dashboard-card {
      transition: transform 0.2s ease;
    }
    .dashboard-card:hover {
      transform: scale(1.03);
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <!-- Top Bar -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h3>Welcome, <%= username %>!</h3>
        <h6 class="text-muted">Class: <%= assigned_class || 'Not Assigned' %></h6>
      </div>
      <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
    </div>

    <!-- âœ… Flash Messages -->
    <% if (messages.success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= messages.success[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <% if (messages.error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messages.error[0] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Dashboard Cards -->
    <div class="row g-4">
      <!-- Enter Results -->
      <div class="col-md-4">
        <div class="card dashboard-card border-primary shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title text-primary">Enter Results</h5>
            <p class="card-text">Submit or update assessments for your class.</p>
            <a href="/results/entry" class="btn btn-primary w-100">Go</a>
          </div>
        </div>
      </div>

      <!-- View Reports -->
      <div class="col-md-4">
        <div class="card dashboard-card border-success shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title text-success">View Reports</h5>
            <p class="card-text">Generate learner report forms.</p>
            <a href="/reports" class="btn btn-success w-100">Go</a>
          </div>
        </div>
      </div>

      <!-- Manage Learners -->
      <div class="col-md-4">
        <div class="card dashboard-card border-secondary shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title text-secondary">Manage Learners</h5>
            <p class="card-text">View, edit, or add learners for your class.</p>
            <a href="/learners" class="btn btn-secondary w-100">Go</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
