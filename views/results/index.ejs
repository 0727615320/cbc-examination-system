<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Results - Admin</title>
  <link rel="stylesheet" href="/css/results.css" />
</head>
<body>
  <h2>All Students Results</h2>

  <div class="flash-message">
    <% if (messages && messages.success && messages.success.length > 0) { %>
      <div class="flash-success"><%= messages.success[0] %></div>
    <% } %>
    <% if (messages && messages.error && messages.error.length > 0) { %>
      <div class="flash-error"><%= messages.error[0] %></div>
    <% } %>
  </div>

  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Student Name</th>
        <th>ADM No</th>
        <th>Class</th>
        <th>Subject</th>
        <th>Performance Level</th>
        <th>Remarks</th>
        <th>Term</th>
        <th>Year</th>
        <th class="no-print">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (results.length > 0) { %>
        <% results.forEach((result, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= result.full_name %></td>
            <td><%= result.adm_no %></td>
            <td><%= result.class %></td>
            <td><%= result.subject %></td>
            <td><%= result.performance_level %></td>
            <td><%= result.remarks %></td>
            <td><%= result.term %></td>
            <td><%= result.year %></td>
            <td class="no-print actions">
              <a href="/results/edit/<%= result.student_id %>" class="btn btn-primary">‚úè Edit</a>
              <form action="/results/delete/<%= result.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this result?')">
                <button type="submit" class="btn btn-danger">üóë Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="10">No results found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div class="actions no-print">
    <a href="/dashboard" class="btn btn-primary">‚¨Ö Back to Dashboard</a>
    <button onclick="window.print()" class="btn btn-success">üñ® Print</button>
  </div>
</body>
</html>
